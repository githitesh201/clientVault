[Unit]
Description=ClientVaultCRM Container Stack via Podman-Compose
After=network.target

[Service]
Type=simple
WorkingDirectory=/opt/apps/clientvault
EnvironmentFile=/opt/apps/clientvault/.env
ExecStart=/usr/bin/podman-compose -f podman-compose.yml up -d
ExecStop=/usr/bin/podman-compose -f podman-compose.yml down
RemainAfterExit=yes

[Install]
WantedBy=default.target

